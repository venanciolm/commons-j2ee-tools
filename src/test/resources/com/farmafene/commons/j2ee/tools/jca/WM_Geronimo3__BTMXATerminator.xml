<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
        http://www.w3.org/2001/XMLSchema-instance
        http://www.w3.org/2001/XMLSchema.xsd
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-2.5.xsd">


	<bean id="btmConfig" factory-method="getConfiguration"
		class="bitronix.tm.TransactionManagerServices">
		<property name="serverId" value="farmafene-j2ee-tools-tm" />
		<property name="logPart1Filename" value="./target/btm/farmafene-j2ee-tools-tm_1.tlog" />
		<property name="logPart2Filename" value="./target/btm/farmafene-j2ee-tools-tm_2.tlog" />
		<property name="defaultTransactionTimeout" value="120" />
		<!-- <property name="allowLocalTransactions" value="true" /> -->
	</bean>
	<bean id="BitronixTransactionManager" factory-method="getTransactionManager"
		class="bitronix.tm.TransactionManagerServices" depends-on="btmConfig" />

	<bean id="transactionManager"
		class="com.farmafene.commons.j2ee.tools.jca.btm.BTMXATerminator"
		depends-on="BitronixTransactionManager" />

	<bean id="XAWork"
		class="com.farmafene.commons.j2ee.tools.jca.geronimo3.GeronimoXAWorkFromIXAWorkAdapter">
		<property name="iXAWorkAdapter" ref="transactionManager" />
	</bean>
	<bean id="workManager"
		class="com.farmafene.commons.j2ee.tools.jca.geronimo3.GeronimoWorkManagerFactory">
		<property name="poolSize" value="5" />
		<property name="xaWork" ref="XAWork" />
	</bean>
</beans>